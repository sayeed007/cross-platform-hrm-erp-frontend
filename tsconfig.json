{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Required for dynamic imports
    // "module": "esnext",
    // "target": "esnext",
    // "jsx": "react-native",
    // "skipLibCheck": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "expo",
    "babel.config.js",
    "metro.config.js"
  ],
}